{
  "name": "traceo-observability-dashboard",
  "version": "1.0.0",
  "description": "Enterprise observability dashboard for Traceo platform",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mantine/core": "^7.3.0",
    "@mantine/hooks": "^7.3.0",
    "@mantine/form": "^7.3.0",
    "@mantine/notifications": "^7.3.0",
    "@mantine/charts": "^7.3.0",
    "@mantine/dates": "^7.3.0",
    "@tanstack/react-query": "^5.28.0",
    "@tanstack/react-router": "^1.27.0",
    "zustand": "^4.4.0",
    "axios": "^1.6.0",
    "recharts": "^2.10.0",
    "cytoscape": "^3.29.0",
    "cytoscape-cose-bilkent": "^4.1.0",
    "react-cytoscapejs": "^1.2.0",
    "i18next": "^23.7.0",
    "react-i18next": "^13.5.0",
    "dayjs": "^1.11.0",
    "tabler-icons-react": "^2.44.0",
    "clsx": "^2.0.0",
    "zod": "^3.22.0",
    "react-hook-form": "^7.48.0",
    "@hookform/resolvers": "^3.3.0",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/cytoscape": "^3.19.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "postcss": "^8.4.0",
    "postcss-preset-mantine": "^4.0.0",
    "postcss-simple-vars": "^7.0.0",
    "vitest": "^1.0.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@playwright/test": "^1.40.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
